<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido Nuevamente"
                android:textColor="#603a91"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginBottom="100dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="100dp"/>

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/email"
                android:textColor="#000000"
                android:textColorHint="#603a91"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Correo Electronico"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:padding="8dp"
                android:drawablePadding="16dp"/>
            <EditText
                android:id="@+id/editTextTextpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/password"
                android:textColor="#000000"
                android:textColorHint="#603a91"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Contraseña"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:padding="8dp"
                android:drawablePadding="16dp"/>


            <ImageButton
                android:id="@+id/login"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:srcCompat="@drawable/btn_login" />

            <Button
                android:id="@+id/buttonGoogle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                style="@android:style/Widget.Button"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_background3"
                android:drawableStart="@drawable/google"
                android:text="Ingresar con Google"
                android:padding="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#603a91"
                android:layout_marginTop="16dp"
                android:drawablePadding="16dp"/>
            <Button
                android:id="@+id/buttonFacebook"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                style="@android:style/Widget.Button"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_background3"
                android:drawableStart="@drawable/facebook"
                android:text="Ingresar con Facebook"
                android:padding="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#603a91"
                android:layout_marginTop="16dp"
                android:drawablePadding="16dp"/>

            <TextView
                android:id="@+id/new_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Eres usuario nuevo?"
                android:textColor="#603a91"
                android:textAlignment="center"
                android:layout_marginTop="32dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>