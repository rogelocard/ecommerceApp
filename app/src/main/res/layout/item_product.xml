<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/image_border"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imageProducto"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/image_description"
        android:src="@drawable/placeholder_image" />

    <TextView
        android:id="@+id/nombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageProducto"
        android:gravity="center"
        android:text="@string/product_name"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/precioProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreProducto"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/product_price"
        android:textColor="#9C27B0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="none"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/round_add_shopping_cart_24"
        app:backgroundTint="@color/purple" />

</RelativeLayout>
